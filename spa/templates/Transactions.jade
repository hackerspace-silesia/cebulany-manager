mixin query_input
    input&attributes(attributes)(onchange="view.getTransactions()")

mixin text_query_input
    input&attributes(attributes)(oninput="view.getTransactions()")

h1 Przelewy
form(name='transactions')
    fieldset
        legend Data
        label Miesiac
        input(type='radio', name='has_month' value='y', checked, onchange='view.changeDateRange(this)')
        label Zakres
        input(type='radio', name='has_month' value='n', onchange='view.changeDateRange(this)')
        div#transaction-month
            +text_query_input(type='month', name='month')
            br
        div.disabled#transaction-range
            label Od dnia
            +text_query_input(type='date', name='date_start', disabled) 
            br
            label Do dnia
            +text_query_input(type='date', name='date_end', disabled)
    fieldset
        legend Mniejszy od
        +text_query_input(type='number', min='0', step='0.01', name='cost_le')
    fieldset
        legend WiÄ™kszy od
        +text_query_input(type='number', min='0', step='0.01', name='cost_ge')
    fieldset
        legend Szukaj
        +text_query_input(type='search', name='text')
    fieldset
        legend Opcje
        +query_input(type='checkbox', name='negative' value='t')
        label Ujemne?
        +query_input(type='checkbox', name='positive', value='t')
        label Dodatnie?

div.modal.disabled#modal_add_type

table#transactions
