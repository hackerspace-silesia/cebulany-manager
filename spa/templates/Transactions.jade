mixin transaction_row(row)
    tr
        td= row.date
        td(title=row.name)= maxChars(row.name, 60)
        td(title=row.title)= maxChars(row.title, 60)
        td.price(
            class=row.cost < 0 ? 'negative' : 'positive'
          )= row.cost + " zł"
        td(title=row.iban)= maxChars(row.iban.replace(/ /g, ''), 5)
        
h1 Przelewy
table
    thead: tr
        th Data
        th Nazwa
        th Tytuł
        th Kwota
        th IBAN
    tbody
        each row in transactions
            +transaction_row(row)
    tfoot
        tr
            th SUMA
            th(colspan=2)
            th.price: strong= sum + " zł"
            th
